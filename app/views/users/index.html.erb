<h1>Here is a list of posts for a given Users</h1>
<h2> List of name's</h2>
<section class='section-main'>
  <% @users.each do |user| %>
    <div class='general-container'>
        <div class='container-users-photo'>
          <img src="<%= user.photo%>"/>
        </div>
        <div class='container-users'>
          <h2 class='user-name'> <%= link_to user_path(user) do%> <%= user.name %><%end%></h2>
          <span class='number-post'>Number of posts: <%=user.posts.count%></span>
        </div>
    </div>
  <% end %>
</section>